{
  "kind": "collectionType",
  "collectionName": "news_items",
  "info": {
    "singularName": "news-item",
    "pluralName": "news-items",
    "displayName": "NewsItem"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "title": {
      "type": "text"
    },
    "summary": {
      "type": "text"
    },
    "category": {
      "type": "string"
    },
    "shareButton": {
      "type": "component",
      "component": "shared.logo-link",
      "repeatable": true
    },
    "content": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "related_news_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::news-item.news-item"
    }
  }
}
